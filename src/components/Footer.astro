---
import { getCurrentSeasonLabel } from '../utils/liturgical-calendar';

const seasonLabel = getCurrentSeasonLabel();
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__info">
        <h3 class="footer__heading">St. Philip Byzantine Catholic Church</h3>
        <address class="footer__address">
          <p>3866 65th Street</p>
          <p>Sacramento, CA 95820</p>
          <p>
            <a href="tel:+19164521888">(916) 452-1888</a>
          </p>
          <p>
            <a href="mailto:frmurin@ephx.org">frmurin@ephx.org</a>
          </p>
        </address>
      </div>

      <div class="footer__links">
        <h3 class="footer__heading">Quick Links</h3>
        <ul role="list">
          <li><a href="/about/">About Us</a></li>
          <li><a href="/bulletins/">Bulletins</a></li>
          <li><a href="/calendar/">Calendar</a></li>
        </ul>
      </div>

      <div class="footer__social">
        <h3 class="footer__heading">Follow Us</h3>
        <div class="footer__social-icons">
          <a href="https://stphilipofsacramento.wordpress.com/links/?share=facebook&nb=1" aria-label="Facebook" class="footer__social-link" target="_blank" rel="noopener noreferrer">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://www.instagram.com/stphilipbyzcath/" aria-label="Instagram" class="footer__social-link" target="_blank" rel="noopener noreferrer">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {year} St. Philip Byzantine Catholic Church. All rights reserved.
      </p>
      <p class="footer__season">Season: {seasonLabel}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--theme-accent);
    color: var(--theme-text-on-primary);
    padding-block: var(--space-2xl) var(--space-lg);
    margin-top: auto;
  }

  .footer a {
    color: var(--theme-text-on-primary);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .footer a:hover {
    opacity: 0.8;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--theme-text-on-primary);
  }

  .footer__address {
    font-style: normal;
    line-height: 1.8;
    opacity: 0.9;
  }

  .footer__links ul {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer__links a {
    opacity: 0.9;
  }

  .footer__social-icons {
    display: flex;
    gap: var(--space-md);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    transition: background-color var(--transition-fast);
  }

  .footer__social-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    opacity: 1;
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .footer__season {
    font-style: italic;
  }
</style>
