---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BannerImage from '../../components/BannerImage.astro';
import { getCollection } from 'astro:content';

const allAlbums = await getCollection('gallery', ({ data }) => !data.draft);
const albums = allAlbums.sort((a, b) => b.data.eventDate.getTime() - a.data.eventDate.getTime());
---

<BaseLayout title="Gallery â€” St. Philip Byzantine Catholic Church" description="Photo albums from events and celebrations at St. Philip Byzantine Catholic Church.">
  <BannerImage title="Gallery" />

  <section class="gallery-section fade-in-section">
    <div class="container">
      {albums.length === 0 ? (
        <p class="empty-message">No photo albums have been added yet. Check back soon!</p>
      ) : (
        <div class="albums-grid">
          {albums.map((album) => (
            <a href={`/gallery/${album.slug}/`} class="album-card">
              <div class="album-card__image-wrapper">
                <img src={album.data.coverImage} alt={album.data.title} class="album-card__image" loading="lazy" />
                <span class="album-card__count">{album.data.photos.length} photo{album.data.photos.length !== 1 ? 's' : ''}</span>
              </div>
              <div class="album-card__content">
                <h2 class="album-card__title">{album.data.title}</h2>
                <time class="album-card__date" datetime={album.data.eventDate.toISOString()}>
                  {album.data.eventDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <p class="album-card__description">{album.data.description}</p>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .gallery-section {
    padding-block: var(--space-2xl);
  }

  .empty-message {
    text-align: center;
    color: var(--color-text-muted);
    font-size: 1.125rem;
    padding: var(--space-2xl) 0;
  }

  .albums-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .album-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: box-shadow var(--transition-base), transform var(--transition-base);
  }

  .album-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .album-card__image-wrapper {
    position: relative;
  }

  .album-card__image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
  }

  .album-card__count {
    position: absolute;
    bottom: var(--space-sm);
    right: var(--space-sm);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 0.8125rem;
    padding: 0.2em 0.6em;
    border-radius: var(--radius-sm);
  }

  .album-card__content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .album-card__title {
    font-size: 1.25rem;
    color: var(--color-heading);
    margin: 0;
  }

  .album-card__date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .album-card__description {
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
  }
</style>
