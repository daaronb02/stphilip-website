---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BannerImage from '../../components/BannerImage.astro';
import { getCollection } from 'astro:content';

const allBulletins = await getCollection('bulletins', ({ data }) => !data.draft);
const bulletins = allBulletins.sort((a, b) => {
  return b.data.publishDate.getTime() - a.data.publishDate.getTime();
});
---

<BaseLayout title="Bulletins â€” St. Philip Byzantine Catholic Church" description="Parish bulletins and announcements from St. Philip Byzantine Catholic Church.">
  <BannerImage title="Bulletins" />

  <section class="bulletins-section fade-in-section">
    <div class="container">
      {bulletins.length === 0 ? (
        <p class="empty-message">No bulletins have been published yet. Check back soon!</p>
      ) : (
        <div class="bulletins-grid">
          {bulletins.map((bulletin) => (
            <a href={`/bulletins/${bulletin.slug}/`} class='bulletin-card'>
              {bulletin.data.image && (
                <img src={bulletin.data.image} alt="" class="bulletin-card__image" loading="lazy" />
              )}
              <div class="bulletin-card__content">
                <h2 class="bulletin-card__title">{bulletin.data.title}</h2>
                <time class="bulletin-card__date" datetime={bulletin.data.publishDate.toISOString()}>
                  {bulletin.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .bulletins-section {
    padding-block: var(--space-2xl);
  }

  .empty-message {
    text-align: center;
    color: var(--color-text-muted);
    font-size: 1.125rem;
    padding: var(--space-2xl) 0;
  }

  .bulletins-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .bulletin-card {
    display: flex;
    flex-direction: column;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: box-shadow var(--transition-base), transform var(--transition-base);
  }

  .bulletin-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .bulletin-card__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .bulletin-card__content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .bulletin-card__badge {
    display: inline-block;
    align-self: flex-start;
    background-color: var(--theme-accent);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2em 0.6em;
    border-radius: var(--radius-sm);
  }

  .bulletin-card__title {
    font-size: 1.25rem;
    color: var(--color-heading);
    margin: 0;
  }

  .bulletin-card__date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

</style>
