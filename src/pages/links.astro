        {linksData.map((link) => (
          <LinkCard
            name={link.name}
            description={link.description}
            url={link.url}
          />
        ))}
      </div>
    </div>
    */}
  </section>
</BaseLayout>

<style>
  .links-section {
    padding-block: var(--space-2xl);
  }

  .links-section__intro {
    max-width: var(--max-width-narrow);
    margin-inline: auto;
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .links-section__intro p {
    margin-inline: auto;
    color: var(--color-text);
  }

  .links-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
    max-width: 960px;
    margin-inline: auto;
  }
</style>
