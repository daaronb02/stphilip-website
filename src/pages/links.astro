---
import BaseLayout from '../layouts/BaseLayout.astro';
import BannerImage from '../components/BannerImage.astro';
import LinkCard from '../components/LinkCard.astro';
import linksData from '../data/links.json';
---

<BaseLayout title="Links â€” St. Philip Byzantine Catholic Church" description="Helpful links to related parishes, eparchies, and Eastern Catholic resources.">
  <BannerImage title="Links" subtitle="Resources for the faithful" />

  <section class="links-section fade-in-section">
    <div class="container">
      <div class="links-section__intro">
        <p>
          Below you will find links to our archeparchy, related parishes, and other resources for those interested in Eastern Catholic Christianity.
        </p>
      </div>

      {linksData.map((linkgroup) => (
        <div class="links-section__intro">
        <p>
          {linkgroup.category}
        </p>
        <div class="links-section__grid">
        {linkgroup.links.map((link) => (
          <LinkCard
            name={link.name}
            description={link.description || ""}
            url={link.url}
          />
        ))}
      </div>
      </div>
      ))}
{/*
